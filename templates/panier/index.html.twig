{% extends 'base.html.twig' %}

{% block title %}Paris ticket - Panier{% endblock %}


{% block body %}
    <div class="file">
        <span></span>
        <div class="cercle">
            <div class="flex-column flex-center">
                <div class="numero file-active">1</div>
                <p>Panier</p>
            </div>
            <div  class="flex-column flex-center">
                <div class="numero">2</div>
                <p>Paiement</p>
            </div>
            <div  class="flex-column flex-center">
                <div class="numero">3</div>
                <p>Confirmation</p>
            </div>
        </div>
    </div>
    <div class="panier">
        <div class="flex-space-between margin-bottom-50px">
            <h2>Mon panier</h2>
        </div>
        <div id="zone"></div>
    </div>
    <div class="text-center">
        <p class="block-phone">Montant total : <span class="total"></span>€</p>
    </div>
    </div>
    <div class="text-right margin-10px">
        <!-- button id="delete" class="lien-intern" <span class="material-icons">delete</span></button -->
    </div>
    <div class="text-right margin-top-50px">
        <p class="block-desktop margin-right-90px">Montant total : <span class="total2"></span>€</p>
    </div>
    <div class="flex-space-between achat">
        <div class="margin-bouton">
            <a class="bouton-commander" href="{{ path('app_manifs') }}">Continuer vos achats</a>
        </div>
        {{ form_start(form, {'attr': {'action': path('app_search'), 'class':'commander' } }) }}
        <input type="hidden" name="liste" id="liste">
        <input class="bouton-commander" type="submit" value="Valider ma commande">
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block js %}
    <script type="text/javascript" src="{{ asset('js/panier.js') }}"></script>
{% endblock %}

