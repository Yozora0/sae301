{% extends 'base.html.twig' %}

{% block title %}{{ manifs.getTitre }}{% endblock %}

{% block body %}

<div class="fond"></div>
<div class="genretitre">
    <span class="titrefilm">{{ manifs.getTitre() }}</span>
    <span class="genre">{{ manifs.genre }}</span>
</div>
    </div>
<div class="image">
    <img src="{{ asset("img/#{manifs.getAffiche()}") }}" alt="{{manifs.getTitre}}"/>
</div>
<div class="container">
    <div class="informations">
        <span class="titreinfo">INFORMATIONS :</span>
        <p class="rea">{{ manifs.casting }}</p>
        <span class="date"><strong>Date : </strong>{{ manifs.date | date('d-m-Y') }} à {{ manifs.horaire | date('H:i') }}</span>
        <span class="lieu"><strong>Lieu : </strong>{{ manifs.lieu }}</span>
    </div>
    <div class="presentation">
    <span class="presentationtitre">PRESENTATION :</span>
        <span class="presentationtext">{{ manifs.description }}</span>
        <span><strong>{{ manifs.tarif }} €</strong></span>
        <a href="#" class="addbouton">Ajouter au panier</a>
    </div>
</div>

{% endblock %}
